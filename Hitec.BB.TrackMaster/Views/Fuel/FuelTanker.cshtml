@{
    ViewBag.Title = "Fuel Graph";
}

<style>
#chartdiv {
    width: 100%;
    height: 500px;
}
</style>
<script src="https://www.amcharts.com/lib/4/core.js"></script>
<script src="https://www.amcharts.com/lib/4/charts.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>

<div class="row-fluid">
    <div class="widget-body ">
        <div class="main_container" id="tables_page">

            @Html.Action("_reportFilterWithFuelList", "Fuel", new { reportTitle = "Fuel Report" })
            <br />

            <div class="row-fluid" style="margin-bottom: 12px; margin-top: -37px;">
                <div class="widget-body" style="border: 0">
                    <div class="row-fluid">
                        <div id="alertss" class="widget span12">
                            <div class="widget-body clearfix" style="background: #fff; overflow-x: auto">
                               
                                 
                                <div class="col-md-12" style="text-align: center;">
                                    <div style="width:50%; float: left;">


                                        <div class="col-md-12" style="text-align: center;">
                                            <div style="width: 50%; float: left;">
                                                <div id="chart-container">
                                                </div>
                                            </div>
                                            <div style="width: 50%; float: left;">
                                                <div class="box_a">
                                                    <div class="box_a_content cnt_a">
                                                        Total Tank Volume    : <span class="CTotal"></span>
                                                        <br />
                                                        Fuel In Tank : <span class="CCurrent"></span>
                                                        <br />
                                                        Remaining  Fuel In Tank: <span class="CRemaining"></span><br />
                                                        DateTime: <span class="CDate"></span>
                                                        <br />
                                                    </div>
                                                    <h6>Fuel Level of Moving Vehicle </h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div style="width:50%; float: right">

                                        <div id="chartdiv">





                                        </div>

                                </div>

                              

                                    

                              

                            </div>
                        </div>
                    </div>
                </div>
            </div>
         

        </div>
    </div>
</div>

@section css{
    
}

@section scripts{
    
    <script src="~/Scripts/app/common.js"></script>
<script type="text/javascript" src="https://cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.js"></script>
<script type="text/javascript" src="https://cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.fusion.js"></script>
    <script src="~/Scripts/app/Fueltank.js?v=@DateTime.Now.Ticks"></script>
}
