<link href="~/Content/css/multi-select.css" rel="stylesheet" />
<link href="~/Content/select2/select2.css" rel="stylesheet" />
<link href="~/Content/select2/select2-bootstrap.css" rel="stylesheet" />
<script src="~/Content/select2/select2.min.js"></script>
<div class="row-fluid">
    <div class="main_container" id="tables_page">
        <div class="row-fluid" style="margin-bottom: 25px;">
            <div class="widget-body" style="border: 0">
                <div class="row-fluid">
                    <div id="alerts" class="widget span12">
                        <div class="widget-header">
                            <i class="fa fa-file-archive-o"></i>
                            <h5>@ViewBag.Title</h5>
                            <div class="btn-group btn-adjst" style="margin-left: 37px;">
                            </div>
                        </div>
                        <div class="widget-body clearfix" style="overflow-x: auto">
                            <div class="box" style="background: #fdfdfd;">
                                <div class="box-content padded">
                                    <form id="VendorForm" type="post" style="margin: 35px;">
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6 pull-left">
                                                    <input type="hidden" id="VendorID" name="VendorID" value="@ViewBag.VendorID">
                                                    <input type="hidden" id="CustId" name="CustId" >
                                                    
                                                    <div class="form-group padded col-sm-4">
                                                        Supplier Name :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="VendorName" name="VendorName" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6  pull-right">
                                                    <div class="form-group padded col-sm-4">
                                                        Supplier Type :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="VendorType" name="VendorType" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6 pull-left">
                                                    <div class="form-group padded col-sm-4">
                                                        Address : 
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <textarea id="Address" name="Address" required></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6  pull-right">
                                                    <div class="form-group padded col-sm-4">
                                                        Postal Code :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="PostalCode" name="PostalCode" maxlength="6" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        State : 
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        @Html.DropDownList("StateId", Enumerable.Empty<SelectListItem>(),"-- Select State--", new { @class = "js-example-single", @style = "width:100%;", @required = "required" })
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        City : 
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        @Html.DropDownList("CityId", Enumerable.Empty<SelectListItem>(),"-- Select City--", new { @class = "js-example-single ", @style = "width:100%;", @required = "required" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Mobile No :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="PhoneNo" name="PhoneNo" maxlength="10" required>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Landline No :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="LandlineNo" name="LandlineNo" maxlength="12"  required>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Email ID :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="Email" name="Email" required>
                                                    </div>
                                                </div>
                                                @*<div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Credit Limit Day :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="CreditCyleLimit" name="CreditCyleLimit" required>
                                                    </div>
                                                </div>*@
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Credit limit Amount :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <input type="text" id="CreditCyleAmount" name="CreditCyleAmount" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-sm-12">
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                        Remarks :
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        <textarea rows="4" cols="50" id="Remarks" name="Remarks"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group padded col-sm-4">
                                                       @* Attachment  :*@
                                                    </div>
                                                    <div class="form-group padded col-sm-8">
                                                        @*<input type="file" id="file" name="file">*@
                                                         <input type="submit" value="submit" id="BtnSubmit" class="btn btn-green"  style="float: right;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       @* <div class="row-fluid">
                                            <div class="col-sm-12"  style="float: right;">
                                                <div class="form-group padded col-sm-3" style="float: right;">
                                                    <input type="submit" value="submit" id="BtnSubmit" class="btn btn-green">
                                                </div>
                                            </div>
                                        </div>*@
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script src="~/Scripts/app/common.js"></script>
     <script src="~/Content/js/APIURL.js"></script>
    <script src="~/Scripts/app/FMSAddUpdateVendor.js"></script>
   

}
