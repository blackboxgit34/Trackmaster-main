@{
    ViewBag.Title = "Add Fuel";
}
<link href="~/Content/css/multi-select.css" rel="stylesheet" />
<link href="~/Content/select2/select2.css" rel="stylesheet" />
<link href="~/Content/select2/select2-bootstrap.css" rel="stylesheet" />
<script src="~/Content/select2/select2.min.js"></script>
<style>
    input[type="file"], input[type="image"], input[type="submit"], input[type="reset"], input[type="button"], input[type="radio"], input[type="checkbox"] {
        margin: 0 4px;
    }
     input[type="file"] {
        display: block;
    }

    .imageThumb {
        max-height: 75px;
        border: 2px solid;
        padding: 1px;
        cursor: pointer;
    }

    .pip {
        display: inline-block;
        margin: 10px 10px 0 0;
    }

    .remove {
        display: block;
        background: #444;
        border: 1px solid black;
        color: white;
        text-align: center;
        cursor: pointer;
    }

        .remove:hover {
            background: white;
            color: black;
        }
</style>
<div class="row-fluid">
    <div class="main_container" id="tables_page">
        <div class="row-fluid" style="margin-bottom: 25px;">
            <div class="widget-body" style="border: 0">
                <div class="row-fluid">
                    <div id="alerts" class="widget span12">
                        <div class="widget-header">
                            <i class="fa fa-file-archive-o"></i>
                            <h5 id="statusText">@ViewBag.Title</h5>
                            <div class="btn-group btn-adjst" style="margin-left: 37px;">
                            </div>
                        </div>
                        <div class="widget-body clearfix" style="overflow-x: auto">
                            <div class="box" style="background: #fdfdfd;">
                                <div class="box-content padded">
                                    <form id="fuelForm" method="post" style="margin: 35px;">
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <br />
                                                <div class="col-md-6 pull-left">
                                                    <div class="form-group padded col-md-4">
                                                        Vehicle Name
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="hidden" id="vehicleIdFromMain" value ="@ViewBag.VehicleId"/>
                                                        @Html.DropDownList("VehicleId", Enumerable.Empty<SelectListItem>(), "Select Vehicle Name", new { @class = "js-example-basic", @required = "required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6  pull-right">
                                                    <div class="form-group padded col-md-4">
                                                        Date
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="Date" name="Date" placeholder="Select Date" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <div class="col-md-6 pull-left">
                                                    <div class="form-group padded col-md-4">
                                                        Litres
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="Liters" name="Liters" placeholder="Fuel in liters" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6  pull-right">
                                                    <div class="form-group padded col-md-4">
                                                        Amount Paid
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="AmountPaid" name="AmountPaid" >
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <div class="col-md-6  pull-right">
                                                    <div class="form-group padded col-md-4">
                                                         KM Reading
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="FOdometer" name="FOdometer" placeholder="Kilometer Reading" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6  pull-right">
                                                    <div class="form-group padded col-md-4">
                                                       Hour Reading
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="HR" name="HR" placeholder="Hour Reading">
                                                    </div>
                                                </div>

                                                <div class="col-md-6 pull-left">
                                                    <div class="form-group padded col-md-4">
                                                        @*Intial Odometer Reading*@
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        @*<input type="text" id="IOdometer" name="IOdometer" required>*@
                                                    </div>
                                                </div>
                                             
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <div class="col-md-6">
                                                    <div class="form-group padded col-md-4">
                                                        Bill No.
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="Reference" name="Reference" >
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group padded col-md-4">
                                                        Filling Station
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <input type="text" id="FuelStation" name="FuelStation" >
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <div class="col-md-6">
                                                    <div class="form-group padded col-md-4">
                                                        Payment through
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        <div>
                                                            <input type="radio" id="Payment" name="Payment" value="Cash"  />Cash                          
                                                            <input type="radio" name="Payment" value="Credit/DebitCard" />Credit/Debit Card
                                                            <input type="radio" name="Payment" value="OnCredit" />On Credit
                                                            <input type="radio" name="Payment" value="PetroCard" />Petro-Card
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group padded col-md-4">
                                                        Upload Bill
                                                    </div>
                                                    <div class="form-group padded col-md-8">
                                                        @Html.Hidden("ImageFileName")
                                                        @Html.Hidden("ImagePath")
                                                        <input type="button" value="Choose File" onclick="document.getElementById('files').click();" /><br />
                                                        <input type="file" id="files" name="files[]" style="display: none;" />
                                                        <br />
                                                        <div id="BundleDetails">
                                                        </div>
                                                        <span class="label label-info">supported filetypes:.bmp,.jpg,.gif,.png</span>
                                                        <br />
                                                        <span class="label label-info">Only 1 image can be uploaded and of size upto 100 Kb only.</span>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="col-md-12">
                                                <div class="row-fluid">
                                                    <div class="col-md-6">
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group padded col-md-4">
                                                        </div>
                                                        <div class="form-group padded col-md-8">
                                                            <input type="submit" value="submit" id="BtnSubmit" class="btn btn-green" style="float: right;">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts{
    <script type="text/javascript" src="@Url.Content("~/scripts/app/common.js?")"@DateTime.Now.Ticks></script>
    <script src="~/Content/js/APIURL.js"></script>
    <script type="text/javascript" src="@Url.Content("~/scripts/app/FmsAddFuel.js?")"@DateTime.Now.Ticks></script>
}

