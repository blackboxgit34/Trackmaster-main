@{
    ViewBag.Title = "Vehicle Registration";
}
<link href="~/Content/css/multi-select.css" rel="stylesheet" />
<link href="~/Content/select2/select2.css" rel="stylesheet" />
<link href="~/Content/select2/select2-bootstrap.css" rel="stylesheet" />
<style>
    .button {
        border: none;
        color: white;
        padding: 0px 7px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        width: 400px !important;
    }

    .button1 {
        background-color: #dc3545; /* Green */
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .button2 {
        background-color: #92a214; /* Green */
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .button3 {
        background-color: #0d6efd; /* Green */
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        width: 200px !important;
    }

    .a {
        font-size: 17px;
    }
</style>
<div class="row-fluid" style="margin-bottom: 25px;">
    <div class="widget-body" style="border: 0">
        <div class="row-fluid">
            <div id="alertss" class="widget span12">
                <div class="widget-header">
                    <i class="fa fa-file-archive-o"></i>
                    <h5>@ViewBag.Title</h5>
                   
                </div>
                <div class="widget-body clearfix" style="overflow-x: auto">
                    <div class="box" style="background: #fdfdfd;">
                        <div class="box-content padded">
                            <div class="row">
                                <div class="col-md-12">
                                   
                                        <form id="AddVeh"  class="form-inline">
                                            <table class="table table-striped table-responsive">
                                                <tr>
                                                    <td><label> Tag Id:</label></td>
                                                    <td> <input type="text" id="txtTagId" class="form-control" required/>
                                                        &nbsp;    &nbsp;&nbsp;<input type="button" value="Get Tag" id="ApiValue" class="btn btn-green">
                                                    </td>
                                                    <td>
                                                        <label>Company Name :</label>

                                                    </td>
                                                    <td>
                                                        <select class="form-control" id="ddlCompanyName"></select>
                                                        


</td>
                                                    @*<td><input type="text" id="txtCompName" class="form-control" /></td>*@
                                                  
                                                </tr>
                                                <tr>
                                                    <td><label>Veh Name:</label></td>
                                                    <td><input type="text" id="txtVehName" class="form-control" required/> </td>
                                                    <td><label>Vehicle Type</label></td>
                                                    <td>
                                                        <input type="radio" id="html" name="fav_language" value="Two">
                                                        <label for="html">Two wheeler </label>
                                                        <input type="radio" id="css" name="fav_language" value="Four">
                                                        <label for="css">Four wheeler </label><br>

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td><label>Veh Make:</label></td>
                                                    <td><select class="form-control" id="ddlVehMake"></select></td>
                                                    <td><label>Veh Model:</label></td>
                                                    <td><input type="text" id="txtVehModel" class="form-control" /></td>
                                                    
                                                    
                                                </tr>
                                                <tr>
                                                    <td><label>Owner Name</label></td>
                                                    <td><input type="text" id="txtName" class="form-control" /></td>
                                                    <td><label>Owner Mobile : </label></td>
                                                    <td><input type="text" id="txtMobile" class="form-control" required/></td>
                                                  
                                                    
                                                </tr>
                                                <tr>
                                                    <td><label>Prime </label></td>

                                                    <td>
                                                        <input type="checkbox" id="vehicle1" name="vehicle1" value="PrimeVeh">
                                                        <label for="vehicle1"> Set Prime Vehicle</label><br>
                                                    </td>
                                                    <td></td>
                                                    <td><input type="button" value="Submit" id="BtnSubmit" class="btn btn-green">
                                                        <input type="button" value="Update" id="BtnUpdate" class="btn btn-green" style="display:none;"></td>
                                                    

                                                </tr>
                                            </table>


                                        </form>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
            <!--/widget-body-->
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Content/js/APIURL.js"></script>
    <script src="~/Scripts/app/GodrejVehregistration.js"></script>
  
}




