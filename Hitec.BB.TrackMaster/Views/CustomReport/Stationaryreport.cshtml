            background: #fff;
            text-align: left;
        }

        .box {
            background: #dddcdc none repeat scroll 0 0;
            border: 0px solid #cdcdcd;
            border-radius: 3px;
            box-shadow: none;
            margin-bottom: 5px;
        }
    </style>
}
@section scripts{
    <script src="~/Scripts/app/common.js"></script>
    <script src="~/Scripts/app/Stationary.js"></script>
    <script>

        function showtraiWindow(vehname, bbid) {
    
    $("#ShowLocationOnMap").dialog({
        autoOpen: true,
        position: { my: "center", at: "200", of: window },
        width: 750,
        height: 500,
        resizable: true,
        title: 'Location On Map',
        modal: true,
        open: function () {
            
            var url ="../CustomReport/GetLocationPartialView?vehname=" + (vehname) + "&bbid=" + bbid;
            $(this).load(url);
            $(".ui-dialog-titlebar-close").hide();
        },
        buttons: {
            Close: function () {
                $(this).dialog("close");
            }
        }
    });
    return false;
}</script>
