            dataType: "json",
            data: { month: v1, year: v2, custid: $custid, lowerbound: lowerbound, upperbound: upperbound },
            success: function (res) {
                $('#DynamicGridLoading').hide();
                $('#DynamicGrid').append(CreateDynamicTable(res.data, res.datacount, val)).fadeIn();
            }
        });

    }




</script>

