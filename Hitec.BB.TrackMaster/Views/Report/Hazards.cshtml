<div class="row-fluid">
    <div class="widget-body ">
        <div class="main_container" id="tables_page">
            <div class="row-fluid" style="margin-bottom: 25px;">
                <div class="widget-body" style="border: 0">
                    <div class="row-fluid">
                        <div id="alerts" class="widget span12">
                            <div class="widget-header">
                                <i class="fa fa-file-archive-o"></i>
                                <h5>Manage Hazards</h5>
                                <div class="btn-group btn-adjst">
                                    <input type="button" value="Add" id="BtnAdd" class="btn btn-green" style="margin-right: 10px;">
                                    <img id="excelExport" src='/content/img/cc1.png' title="Click here to download the below results in excel form." onmouseover="this.src='/content/img/z33.png';" onmouseout="this.src='/content/img/cc1.png';" style="margin-left: 0px; WIDTH: 33PX; cursor: pointer;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/widget-body-->
            </div>
            <div class="row-fluid" style="margin-bottom: 12px; margin-top: -37px;">
                <div class="widget-body" style="border: 0">
                    <div class="row-fluid">
                        <div id="alertss" class="widget span12">
                            <div class="widget-body clearfix" style="background: #fff; overflow-x: auto">
                                <div id="DivVehcleCounter" style="padding: 15px;">
                                    <div class="box-content padded">
                                        <table id="dt_basic_Master" class="table table-bordered" width="100%">
                                            <thead>
                                                <tr>
                                                    <th hidden>id</th>
                                                    <th>S No</th>
                                                    <th>Name</th>
                                                    <th>Added on</th>
                                                    <th>Status</th>
                                                    <th>Audio</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-content" id="myModal" style="display:none">
    <div class="modal-body">
        <div>
            <div id="Fade" class="w3-container city w3-animate-zoom">
                <div class="row-fluid" style="margin-bottom: 12px; margin-top: -37px;">

                    <div class="row-fluid">
                        <div class="widget span12" style="margin-top:50px">
                            <div id="DivVehcleCounter">
                                <div class="box-content">
                                    <div class="box-content">
                                        <form data-toggle="validator" role="form">
                                            <div class="form-group">
                                                <label for="inputName" class="control-label">Name</label>
                                                <input type="hidden" id="upid" />
                                                <input type="text" class="form-control" id="upname" name="upname" placeholder="Hazard Name" required>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputName" class="control-label">File Path</label>
                                                <input type="file" id="upurl" name="upurl" placeholder="Select audio file" required>
                                                <input type="hidden" id="upurlbak" />
                                                <input type="hidden" id="custId" name="custId" />
                                                <div id="player" style="margin-left: -20px;"></div>
                                            </div>
                                            <div class="form-group">
                                                <button type="button" onclick="update()" class="btn btn-green">Submit</button>
                                                <button type="button" onclick="$('#myModal').dialog();" class="btn btn-green">Cancel</button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>


