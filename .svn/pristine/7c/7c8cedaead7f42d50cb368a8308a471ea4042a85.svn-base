function DeletePart(PartId) {
    if (confirm("Do you want to delete selected part?")) {
        var url = apiBase.apiurl + 'FmsAPI/RemovePart?partId=' + PartId;

        $.post(url, function (result) {
            if (result > 0) {

                toastr.success("Record deleted successfully")
            }
            else
                toastr.error("Failed!!!")
        }).done(function (data) {
            GetParts(null);
        });

    }
    else
        return false;
}