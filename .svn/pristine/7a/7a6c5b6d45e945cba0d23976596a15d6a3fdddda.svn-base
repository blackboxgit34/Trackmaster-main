           function initMap(myLatlng, name, html, icon_type, status, map, angle) {

               //alert(icon_type);
               if (angle == 0) {

                   icons[7] = "http://maps.google.com/mapfiles/dir_" + angle + '.png ';
               }
               else {

                   var check = angle / 3;

                   var check = Math.round(check);

                   var check = check + 1;

                   var check = check * 3;


                   if (check < 120) {

                       var check = 120 - check;

                   }
                   else {
                       var check = check - 120;

                   }





                   icons[7] = "http://maps.google.com/mapfiles/dir_" + check + '.png ';


               }
               var lineSymbol = {
                   path: google.maps.SymbolPath.BACKWARD_CLOSED_ARROW,
                   scale: 7
               };
             
               var marker = new google.maps.Marker({
                   position: myLatlng,
                   map: map,
                   title: name,
                    icon: icons[7],
                   offset: '500%',
                   scale: 5
               });
               var infowindow = new google.maps.InfoWindow({
                   content: html
               });
               google.maps.event.addListener(marker, 'mouseover', function () {
                   infowindow.open(map, marker);
               });
               google.maps.event.addListener(marker, 'mouseout', function () {
                   infowindow.close(map, marker);
               });

               google.maps.event.addListener(infowindow, 'closeclick', function () {
                   openedInfoWindow = null;
               });
               return marker;
           }
           function createMarker(myLatlng, name, html, icon_type, status, map) {
               //alert(icon_type);

               var customIcon = new google.maps.MarkerImage(icons[icon_type]);
               var marker = new google.maps.Marker({
                   position: myLatlng,
                   map: map,
                   title: name
                   , icon: customIcon
               });
               var infowindow = new google.maps.InfoWindow({
                   content: html
               });
               google.maps.event.addListener(marker, 'mouseover', function () {
                   infowindow.open(map, marker);
               });
               google.maps.event.addListener(marker, 'mouseout', function () {
                   infowindow.close(map, marker);
               });

               google.maps.event.addListener(infowindow, 'closeclick', function () {
                   openedInfoWindow = null;
               });
               return marker;
           }

