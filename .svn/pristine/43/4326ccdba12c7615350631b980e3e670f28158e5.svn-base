using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace Hitec.BB.TrackMaster.Models
{
    public static class HitecConfig
    {
        public static string DateOnlyFormat
        {
            get
            {
                return "dd-MMM-yyyy";
            }
        }

        public static string DateTimeFormat12Hour
        {
            get
            {
                return "dd-MMM-yyyy hh:mm:ss tt";
            }
        }

        public static string DateTimeFormat24Hour
        {
            get
            {
                return "dd-MMM-yyyy HH:mm:ss";
            }
        }
    }
}