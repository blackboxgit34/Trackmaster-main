@{
    ViewBag.Title = "Trip Report";
}
<script src="https://code.jquery.com/jquery-1.12.3.js"></script>
<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
<div class="row-fluid">
    <div class="widget-body ">
        <div class="main_container" id="tables_page">
 
                @Html.Action("_reportFilterWithRouteList","CustomReport", new { reportTitle = "Trip Report" })
            <br />
            <div class="row-fluid" style="margin-bottom: 12px; margin-top: -37px;">
                <div class="widget-body" style="border: 0">
                    <div class="row-fluid">
                        <div id="alertss" class="widget span12">
                            <div class="widget-body clearfix" style="background: #fff; overflow-x: auto">
                                <div id="DivVehcleCounter">
                                    <div class="box-content padded">
                                        <table id="dt_basic_Master" class="table table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                      <th>Vehicle No</th>
                                                      <th>Count</th>
                                                      <th>Details</th>

                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/widget-body--> 
            </div>
        </div>
    </div>
</div>

@section css{
    <style>
        .col-md-2 {
            width: 15.6%;
            margin-left: 6px;
            background: #fff;
            text-align: left;
        }

        .box {
            background: #dddcdc none repeat scroll 0 0;
            border: 0px solid #cdcdcd;
            border-radius: 3px;
            box-shadow: none;
            margin-bottom: 5px;
        }
    </style>
}

@section scripts{

    <script src="~/Scripts/app/common.js"></script>
    <script>

        $(document).ready(

    function () {
        debugger;
        $("#routelist").select2();
        var baseurl = apiBase.apiurl;
        //var baseurl = '@System.Configuration.ConfigurationManager.AppSettings["apibaseurl"]';
         var url = baseurl + 'CustomAPI/GetRoute?type=2';
         console.log('calling url: ' + url + ' to get vehicles list.');
         $.ajax({
             url: url,
             dataType: "json",
             type: "GET",
             data: { custid: $custid },
             contentType: 'application/x-www-form-urlencoded; charset=utf-8',    //replace /json to the urlenoded
             async: false,
             //  processData: false,
             //  cache: false,
             success: function (data) {

                 //$.getJSON(url, function (data) {
                 var $select = $('#routelist');
                 $.each(data, function (i, item) {
                     $('#routelist').append($('<option></option>').val(item.Value).html(item.Text));

                 });
             }
         });

     });

    </script>
    <script src="~/Scripts/app/TripReport.js?v=0.00.000"></script>
     

    
}



