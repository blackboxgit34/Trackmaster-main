@section css{
    <style>


        .flip-container {
        perspective: 1000px;
        float:left;
        margin: 20px;
      }
      .flip-containerhover .flipper, .flip-container.hover .flipper {
        transform: rotateY(180deg);
      }
      .flip-container, .front, .back {
        width: 100%;
        height:700px;
      }
      .flipper {
        transition: 0.6s;
        transform-style: preserve-3d;
        position: relative;
      }
      .front, .back {
        backface-visibility: hidden;
        position: absolute;
        top: 0;
        left: 0;
      }
      .front {
        z-index: 2;
        transform: rotateY(0deg);
      }
      .back {
        transform: rotateY(180deg);
      }



        .col-md-2 {
            width: 15.6%;
            margin-left: 6px;
            background: #fff;
            text-align: left;
        }

        .box {
            background: #dddcdc none repeat scroll 0 0;
            border: 0px solid #cdcdcd;
            border-radius: 3px;
            box-shadow: none;
            margin-bottom: 5px;
        }




        /* ---- boxes ---- */
    .box_a {border:1px solid #ddd;background:#fff;position:relative;margin-top:97px;}
   
    .box_a_content.cnt_a {padding:35px}
   


    </style>
}

@section scripts{
    <script>

