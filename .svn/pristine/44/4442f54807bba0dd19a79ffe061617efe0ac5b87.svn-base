            async: false,
            //  processData: false,
            //  cache: false,
            success: function (data) {
                var $select = $('#drpcustomerlist');
                $.each(data, function (i, item) {
                    $('#drpcustomerlist').append($('<option></option>').val(item.Value).html(item.Text));

                });
            }
        });

        $("#CreditList").select2();
