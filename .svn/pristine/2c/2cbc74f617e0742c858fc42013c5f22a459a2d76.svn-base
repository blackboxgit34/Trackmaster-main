<script type="text/javascript">
    var chart = AmCharts.makeChart("chartdiv", {
        "type": "pie",
        "balloonText": "[[title]]<br><span style='font-size:14px'><b>[[value]]</b></span>",
        "innerRadius": 50,
        "minRadius": 140,
        "labelRadius": -40,
        "labelText": "[[title]]:[[value]]",
        "dataProvider": [{
            "country": "Total",
            "litres": 10
        }, {
            "country": "Running",
            "litres": 8
        }, {
            "country": "Parked",
            "litres": 7
        }, {
            "country": "Ignition On",
            "litres": 6
        }, {
            "country": "Moving",
            "litres": 8
        },
         {
             "country": "Un-reachable",
             "litres": 9
         }],
        "valueField": "litres",
        "titleField": "country"
    });
										</script>

